@page
@model Mission09_ea11160.Pages.AddToCartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        <!--access the instance of the cart-->
        @foreach (var i in Model.cart.Items)
         {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>15</td>
                <td>@(i.Quantity * 15)</td>
            </tr>
         }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn bg-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>