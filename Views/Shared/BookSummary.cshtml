}

<!--create partial view for Book Summary-->

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <!--second css element was adding a text shadow to the title to make it stand out-->
        <h4 style="text-shadow: 1px 1px;">
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float: right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model.Author</div>
    <div class="card-text p-1">@Model.Publisher</div>
    <div class="card-text p-1">@Model.Isbn</div>
    <div class="card-text p-1">@Model.Classification</div>
    <div class="card-text p-1">@Model.Category</div>
    <div class="card-text p-1">@Model.PageCount</div>


    <form method="post" asp-page="/AddToCart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add To Cart</button>
        </span>
    </form>
</div>